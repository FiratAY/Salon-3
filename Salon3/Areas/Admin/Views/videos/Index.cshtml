@model IEnumerable<Salon3.Models.video>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 style="text-align:center">Video Düzenle</h3><br />

<p>
    <button style="margin-left : 10px" type="button" class="btn btn-primary"><i class="fa fa-check"></i> @Html.ActionLink("Create New", "Create")</button>
</p>
<table class="table table-striped">
    <tr class="info">
        <th>
            Video Yolu
        </th>
        <th>
          Video Adı
        </th>
        <th>
           Film Adı
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.yol)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.film.ad)
        </td>
        <td>
            <button type="button" class="btn btn-info"><i class="fa fa-pencil-square-o"></i> @Html.ActionLink("Edit", "Edit", new { id = item.videoID }) </button>
            <button type="button" class="btn btn-success"><i class="fa fa-wrench"></i> @Html.ActionLink("Details", "Details", new { id = item.videoID }) </button>
            <button type="button" class="btn btn-danger"><i class="fa fa-times"></i> @Html.ActionLink("Delete", "Delete", new { id = item.videoID })</button>
</td>
    </tr>
}

</table>
